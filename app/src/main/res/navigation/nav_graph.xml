<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.photoeditor.presenter.fragments.MainFragment"
        android:label="@string/main_fragment_label">
        <action
            android:id="@+id/action_mainFragment_to_featureFragment"
            app:destination="@id/featureFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cropFragment"
            app:destination="@id/cropFragment" />
        <action
            android:id="@+id/action_mainFragment_to_lightFragment"
            app:destination="@id/lightFragment" />

        <action
            android:id="@+id/action_mainFragment_to_colorFragment"
            app:destination="@id/colorFragment" />
        <action
            android:id="@+id/action_mainFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>

    <fragment
        android:id="@+id/featureFragment"
        android:name="com.example.photoeditor.presenter.fragments.FeatureFragment"
        android:label="@string/feature_fragment_label"
        tools:layout="@layout/fragment_feature">
        <argument
            android:name="feature"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/cropFragment"
        android:name="com.example.photoeditor.presenter.fragments.CropFragment"
        android:label="@string/crop_fragment_label"
        tools:layout="@layout/fragment_crop">
        <argument
            android:name="image"
            app:argType="android.os.Parcelable" />
    </fragment>

    <fragment
        android:id="@+id/lightFragment"
        android:name="com.example.photoeditor.presenter.fragments.LightFragment"
        android:label="@string/light_fragment_label"
        tools:layout="@layout/fragment_light">
        <argument
            android:name="image"
            app:argType="android.os.Parcelable" />
    </fragment>

    <fragment
        android:id="@+id/colorFragment"
        android:name="com.example.photoeditor.presenter.fragments.ColorFragment"
        android:label="@string/color_fragment_label"
        tools:layout="@layout/fragment_color">
        <argument
            android:name="image"
            app:argType="android.os.Parcelable" />
    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.photoeditor.presenter.fragments.FilterFragment"
        android:label="@string/filter_fragment_label"
        tools:layout="@layout/fragment_filter">
        <argument
            android:name="image"
            app:argType="android.os.Parcelable" />
    </fragment>

</navigation>